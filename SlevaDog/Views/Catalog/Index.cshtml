@model Sale
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<a asp-action="Index" asp-route-sortOrder="@ViewData["SaleSortParm"]">Od nejvetsi slevy</a>
<a asp-action="Index" asp-route-sortOrder="@ViewData["NewSortParm"]">Od nejnovejsiho</a>
<a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]">Od nejlevnejsiho</a>
<div class="row">
    @foreach (var item in Model.saleCollection.collections)
    {
        <div class="col-md-4 col-xs-12 col-sm-6 text-center">
            <div class="col-md-12 col-xs-12 col-sm-12 containerItem">
                <div>
                    <h3>
                        <a asp-controller="Item" asp-action="Item" asp-route-id="@item.Id" style="width: 100%;">@item.Name</a>
                    </h3>
                </div>

                <div class="test-container">
                    <a asp-controller="Item" asp-action="Item" asp-route-id="@item.Id">
                        <img src="@item.Image" alt="" class="imageCatalog">
                    </a>
                    <div class="test-right">
                        -@item.PercentSale%
                    </div>
                </div>
                <div>
                    <s>@item.OriginPrice,-</s>
                    <div class="priceSale">
                        @item.PriceAfterSale Kč
                    </div>
                    <a href="@item.LinkFirm" class="btn btn-success btn-lg">Koupit v obchodě</a>
                </div>
            </div>
        </div>
    }
</div>   

<div id="burst-12">-40%</div>
    @*@item.PercentSale%*@

